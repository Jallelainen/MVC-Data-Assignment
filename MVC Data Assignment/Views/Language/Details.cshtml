@model Language

<h1>Language Index</h1>

<br />
<div class="row">
    <div class="col">
        <h4 class="border border-top-0 border-right-0">@Model.Name</h4>
    </div>
</div>
<div class="row">
    <div class="col">
        <h5>Language Speakers</h5>
        <ol>
            @foreach (PersonLanguage item in Model.Speakers)
            {
                <li>
                    <p><b>Name:</b> @item.Person.Name</p>
                </li>
            }
        </ol>
    </div>

</div>
<div class="row">
    <div class="col">
        <a class="btn btn-danger" asp-controller="Language" asp-action="Index">Back</a>
    </div>
</div>