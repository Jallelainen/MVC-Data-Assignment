@model CreateCountryViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Country Index</h1>

<br />


<div class="row">

    <div class="col">
        <form asp-controller="People" asp-action="Search" method="post" onsubmit="AjaxSearch(event, this)">
            <div class="input-group mb-3">
                <input class="form-control col" id="searchInput" asp-for="Search" placeholder="Search the list..." />
                <div class="input-group-append">
                    <button class="btn btn-success btn-sm" type="submit">Search</button>
                    <button class="btn btn-danger btn-sm" asp-controller="City" asp-action=""
                            data-target="listAreaDiv" onclick="AjaxClearSearch(event)">
                        Clear
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="collapse" id="createEnviroment"></div>

<div id="listAreaDiv">
    <div class="btn-group btn-group">
        <a class="btn btn-outline-primary active">Countries</a>
        <a class="btn btn-outline-primary" asp-controller="City" asp-action="Index">Cities</a>
        <a class="btn btn-outline-primary" asp-controller="People" asp-action="Index">People</a>
    </div>
    <partial name="_CountryListPartial" model="Model.CountryList" />
</div>