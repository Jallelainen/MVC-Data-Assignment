@model CreateCountryViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Country Index</h1>

<br />


<div class="row">
    <div class="col-4">
        <a class="btn btn-secondary btn-sm" asp-controller="Country" asp-action="Create">Add Country</a>
    </div>
    <div class="col-8">
        <form asp-controller="Country" asp-action="Search" method="post">
            <div class="input-group mb-3">
                <input class="form-control col" id="searchInput" asp-for="Search" placeholder="Search the list..." />
                <div class="input-group-append">
                    <button class="btn btn-success btn-sm" type="submit">Search</button>
                    <button class="btn btn-danger btn-sm" asp-controller="Country" asp-action="Index">
                        Clear
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="collapse" id="createEnviroment"></div>

<div id="listAreaDiv">
    <partial name="_CountryListPartial" model="Model.CountryList" />
</div>