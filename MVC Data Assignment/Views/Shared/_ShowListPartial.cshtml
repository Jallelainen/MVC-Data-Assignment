<div class="row shadow-sm p-4 mb-4 bg-white">
    <div class="col-12">
        <div class="row">
            <div class="col">
                <h4 class="border border-top-0 border-right-0">Name</h4>
            </div>
            <div class="col">
                <h4 class="border border-top-0 border-right-0">Phone Number</h4>
            </div>
            <div class="col">
                <h4 class="border border-top-0 border-right-0">City</h4>
            </div>
            <div class="col">
                <h4 class="border border-top-0 border-right-0">Action</h4>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="row">
                <partial name="_ListItemPartial" model="item" />
                <div class="col">
                    <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Remove</a>
                </div>
            </div>
        }
    </div>
</div>