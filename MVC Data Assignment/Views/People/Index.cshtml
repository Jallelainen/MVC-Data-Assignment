@model PeoplesViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>People List Index</h1>

@if (@Model.Msg != null)
{
    <div class="toast">
        <div class="toast-header">
            <h5>Message</h5>
        </div>
        <div class="toast-body">
            @if (Model.Msg.Contains("Error"))
            {
                <p style="color: red">@Model.Msg</p>
            }
            else
            {
                <p style="color: green">@Model.Msg</p>
            }
        </div>
    </div>
}

<br />
<a class="btn btn-secondary btn-sm" id="createBtn" asp-controller="People" 
   asp-action="AjaxCreate" data-target="createEnviroment" 
   onclick="ShowCreate(event)">Add Person to List</a>
<br />
<div class="collapse" id="createEnviroment"></div>

<br />
<div class="row">
    <div class="col-12">
        <form asp-action="Index" method="post">
            <div class="input-group mb-3">
                <input class="form-control col-3" type="search" placeholder="Search the list..." name="search" />
                <div class="input-group-append">
                    <button class="btn btn-success btn-sm" type="submit">Search</button>
                    <button class="btn btn-danger btn-sm" asp-action="Index" method="get">Clear</button>
                </div>
            </div>
        </form>
    </div>
</div>

<partial name="_ShowListPartial" model="Model.peopleList" />

