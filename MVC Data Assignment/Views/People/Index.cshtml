<div class="row">
    <div class="col-12">
        <form asp-action="Index" method="post">
            <h4>Search</h4>
            <input class="mr-sm-1" type="search" name="search" />
            <button class="btn btn-success btn-sm" id="searchbtn" type="submit" value="">Search</button>
        </form>
    </div>
</div>

<table class="table-striped">
    <tr>

        <td><b>Name</b></td>
        <td><b>Phone</b></td>
        <td><b>City</b></td>
        <td></td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.PhoneNum</td>
            <td>@item.City</td>
            <td>
                <form asp-action="Index" method="delete">
                    <button class="btn btn-danger btn-sm" for="@item.Id">Remove</button>
                    <span asp-validation-for="@item.Id"></span>
                </form>
            </td>
        </tr>
    }
</table>